{
  "name": "inventario-app-dev",
  "version": "1.0.0",
  "description": "Dependencias de desarrollo para el Sistema de Inventario",
  "private": true,
  "scripts": {
    "start": "./start-app.sh",
    "stop": "./stop-app.sh",
    "dev": "./quick-start.sh",
    "dev:basic": "./dev-start.sh",
    "dev:watchman": "./watchman-start.sh",
    "clean": "rm -rf frontend/node_modules backend/__pycache__ *.pyc",
    "clean:all": "rm -rf frontend/node_modules backend/__pycache__ *.pyc inventario.db",
    "status": "npx pm2 status",
    "logs": "npx pm2 logs",
    "restart": "npx pm2 restart all",
    "stop:pm2": "npx pm2 stop all"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
